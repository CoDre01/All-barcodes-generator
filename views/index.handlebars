        <option value="code32">Code 32</option>
        <option value="danishpostal">Danish Postal</option>
        <option value="gs1datamatrix">GS1 DataMatrix</option>
        <option value="micropdf417">MicroPDF417</option>
        <option value="posti">Posti</option>
        <option value="swisspostfinance">Swiss PostFinance</option>
        <option value="ukrainefastparcel">Ukraine Fast Parcel</option>
        <option value="danskpost">Dansk Post</option>
        <option value="royalmailmailmark">Royal Mail Mailmark</option>
        <option value="australiaposteparcel">Australia Post eParcel</option>
        <option value="austrianpost">Austrian Post</option>
        <option value="dpleopard">DP LEOPARD</option>
        <option value="hibcaztec">HIBC Aztec</option>
        <option value="hibccodablockf">HIBC Codablock F</option>
        <option value="hibcdatamatrix">HIBC Datamatrix</option>
        <option value="hibcdatabar">HIBC Databar</option>
        <option value="hibcmicropdf">HIBC MicroPDF</option>
        <option value="hibcpdf417">HIBC PDF417</option>
        <option value="hibcqrCode">HIBC QR Code</option>
        <option value="koreapost">Korea Post</option>
        <option value="postnet24">Postnet 24</option>
        <option value="pzn7">PZN-7</option>
        <option value="qrcodemicro">QR Code Micro</option>
        <option value="vietnamesepostal">Vietnamese Postal</option>
        <option value="uspsintelligentmailpackagebarcode">USPS Intelligent Mail Package Barcode</option>
      </select>
      <br>
      <br>
      <label for="barcodeText">Enter your text: </label>
      <input type="text" name="barcodeText" id="barcodeText" required>
      {{#if errMessage}}
        <p id="errMessage">{{errMessage}}</p>
      {{/if}}
      <br><br>
      <div class="inputFlex">
      <label for="backgroundColor">Select background colour: </label>
      <input type="color" name="backgroundColor" value="#dcdbdc" id="backgroundColor">
      </div>
      <br>
      <div class="inputFlex">
      <label for="color">Select Image colour:</label>
      <input type="color" name="color" id="color">
      </div>
      <br>
      <div class="inputFlex">
      <label for="scale">Set size of image:</label>
      <input type="number" name="scale" id="scale" min="1" max="5"><br>
      </div>
      <br>
      <button type="submit" value="Submit" id="submitBtn">Submit</button>
    </form>
  </div>

  {{#if png}}
  <div id="imageContainer">
    <img src={{png}} alt="Barcode Image"><br>
    <a href={{png}} download><button>Download Barcode Image</button></a>
  </div>
  {{else}}
     
  {{/if}}
  </div>
</body>

</html>